	public static void main(String[] args) 
	{
		EventQueue.invokeLater(new Runnable() 
		{
			public void run() 
			{
				try {
					Client frame = new Client();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}


	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		if(e.getSource() == btLogin)
		{
			try {
				Entrar(tfNome.getText(), tfPass.getText());
			} catch (SQLException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
		}
	}
	
	
	/*
	 * Corre o Login.
	 */
	public void Entrar(String N, String P) throws SQLException
	{
		if(login_prog(N, P ))
		{
			login.setVisible(false);
		}
	}
	
	public void Conect() throws SQLException
	{
		String url = "jdbc:mysql://127.0.0.1:3306/Ticket";
		try {
		     Class.forName(drive);
		     con = DriverManager.getConnection(url, "root","");
		     if (con != null)
		       System.out.println("\n Sucesso na ligação a BD Dados \n");
		 }catch( ClassNotFoundException e) {e.printStackTrace();}
	}
	
	public boolean login_prog(String N, String P) throws SQLException
	{
		Conect();
		Statement st ;
		ResultSet rs ;
		st = con.createStatement();
	    str_QUERY = "SELECT id FROM login where username like '"+ N +"' AND password like'"+ P +"';";
	    rs = st.executeQuery(str_QUERY);
		con.close();
		con = null;
		if(!rs.next())
		{
			return false;
		}
		else
		{
			return true;
		} 
	}
}