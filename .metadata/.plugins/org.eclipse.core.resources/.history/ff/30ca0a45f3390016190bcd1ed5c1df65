package Electronica_package;

import java.awt.*;
import java.awt.event.*;

public class Simulador extends Frame {
	Resistencia R [] =  new Resistencia[20];
	Resistencia r1, r2;
	public Simulador(){
		// TODO Auto-generated constructor stub
		super("Simulador");
		
		//criar uma nova resistencia
		r2 = new Resistencia();
		r1= new Resistencia(100, 100, 1000, true, "Ri");
		
		
		//frame
		setSize(640, 480);
		setResizable(false);
		setVisible(true);
	}
